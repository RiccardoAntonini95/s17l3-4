@{
}

<form class="text-center" method="post" asp-controller="EditProduct" asp-action="Edit" enctype="multipart/form-data">
    <fieldset>
        <legend>New Product:</legend>
        <label for="Name">Name:</label>
        <input type="text" id="Name" name="Name" value="@Model.Name">
        <br>
        <br>
        <label for="Price">Price:</label>
        <input type="number" step="0.01" id="Price" name="Price" value="@Model.Price">
        <br>
        <br>
        <label for="Description">Description:</label>
        <input type="text" id="Description" name="Description" value="@Model.Description">
        <br>
        <br>
        <label for="CoverImg">Product Img:</label>
        <input type="file" id="CoverImg" name="CoverImg" value="@Model.CoverImg">
        <br>
        <br>
        <button type="submit" value="Submit">Edit Product</button>
    </fieldset>
</form>